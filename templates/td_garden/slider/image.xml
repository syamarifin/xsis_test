		<field name="mx_text1" type="text" size="100" default="" label="Third line text (pro)" description="Third line text" disabled="true" />
		<field name="mx_target_url" type="text" default="" label="Read more link (pro)" description="Link for read more button" published="1" disabled="true"/>
